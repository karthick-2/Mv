@model Mv.Models.AdminModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="choose_box remov_padd">
    @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @name = "login" }))
    {
        if (ViewBag.Msg != null)
        {
            <div class="alert alert-danger" role="alert"><strong>Error!</strong>&nbsp;@ViewBag.Msg</div>
        }
        <div class="sub_page">
            <h2>Administrator Login</h2>
            <p>&nbsp;</p>
            <div class="page_box">
                <div class="left_side">Username</div>
                <div class="right_side">
                    @Html.TextBoxFor(m => m.username, new { autofocus = "autofocus", @id = "username", @name = "username" })
                    @Html.ValidationMessageFor(m => m.username)
                </div>
            </div>
            <div class="page_box">
                <div class="left_side">Password</div>
                <div class="right_side">
                    @Html.PasswordFor(m => m.password, new { @id = "password", @name = "password" })
                    @Html.ValidationMessageFor(m => m.password)
                </div>
            </div>
            <div class="page_box">
                <div class="left_side">&nbsp;</div>
                <div class="right_side">
                    <input type="submit" value="submit" />
                </div>
            </div>
        </div>
    }
</div>
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script type="text/javascript">
    $(function () {
        $("form[name='login']").validate({
           rules: {
                username: "required",
                password: {
                    required: true,
                    minlength: 5
                }
            },
            // Specify validation error messages
            messages: {
                username: "Please enter Username1",
                password: {
                    required: "Please enter Password1",
                    minlength: "Your password must be at least 5 characters long1"
                }
            },
            // Make sure the form is submitted to the destination defined
            // in the "action" attribute of the form when valid
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

</script>